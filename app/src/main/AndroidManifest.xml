<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bhcc.app.pharmtech">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.bhcc.app.pharmtech.view.MainActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.bhcc.app.pharmtech.view.SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.bhcc.app.pharmtech.view.DailyDrugDialogFragment"
            android:configChanges="orientation|screenSize" />

        <activity
            android:name="com.bhcc.app.pharmtech.view.study.CardActivity"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>

